<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/templates">
  <excludes>
    <pattern>/css/*</pattern>
    <pattern>/images/*</pattern>
    <pattern>/js/*</pattern>
    <pattern>/libs/*</pattern>
    <pattern>/favicon.ico</pattern>
  </excludes>

  <decorator name="template" page="template.jsp">
    <pattern>/*</pattern>
  </decorator>

  <decorator name="template_simple" page="template_simple.jsp">
    <pattern>/</pattern>
  </decorator>

  <decorator name="template_skill" page="template_skill.jsp">
    <pattern>/skill*</pattern>
  </decorator>

  <decorator name="template_admin" page="template_admin.jsp">
    <pattern>/admin*</pattern>
  </decorator>

  <decorator name="template_dashboard" page="template_dashboard.jsp">
    <pattern>/dashboard*</pattern>
    <pattern>/courses*</pattern>
    <pattern>/settings*</pattern>
  </decorator>

</decorators>